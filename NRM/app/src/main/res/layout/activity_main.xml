<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.jura611.nrm.MainActivity">

    <Button
        android:id="@+id/btnShowDetails"
        android:drawableTop="@drawable/detalji3"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:text="Show Details"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnShowMap2"
        app:layout_constraintLeft_toRightOf="@+id/btnStart"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.508"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:drawableTop="@drawable/scan3"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:text="Start"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnShowMap"
        android:layout_marginLeft="52dp"
        app:layout_constraintVertical_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnShowMap"
        android:drawableTop="@drawable/mapa"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:text="Show Map"
        app:layout_constraintRight_toLeftOf="@+id/btnShowMap2"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="231dp" />

    <Button
        android:id="@+id/btnShowMap2"
        android:drawableTop="@drawable/mapa1"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:text="Show Map 2"
        android:layout_marginRight="51dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="231dp" />

    <Button
        android:id="@+id/btnshowMap3"
        android:drawableTop="@drawable/mapa2"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:text="Show Map 3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.785" />


</android.support.constraint.ConstraintLayout>
