<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jura611.nrm.MainActivity">

    <Button
        android:id="@+id/btnShowDetails"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:text="Show Details"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="317dp" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:text="Start"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/btnShowDetails"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.983" />


    <Button
        android:id="@+id/btnShowMap"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:text="Show Map"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnShowDetails"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btwShowMap2"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:text="Show Map 2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnShowMap"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
